# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
# IMPORTANT: Copy this file to .env.prod and fill in ALL values
# NEVER commit .env.prod to version control!
#
# Generate APP_KEY: php artisan key:generate --show
# Generate strong passwords: openssl rand -base64 32
# ==============================================

# ----------------------
# Application Settings
# ----------------------
APP_NAME="AnimeFeverZone"
APP_ENV=production
APP_KEY=base64:GENERATE_THIS_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://animefeverzone.com

# ----------------------
# Database Configuration
# ----------------------
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=anime_fever_zone
DB_USERNAME=animeuser
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_ROOT_PASSWORD=CHANGE_THIS_TO_STRONG_ROOT_PASSWORD

# ----------------------
# Redis Configuration
# ----------------------
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
REDIS_PORT=6379

# ----------------------
# Cache & Session
# ----------------------
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

# ----------------------
# Queue Configuration
# ----------------------
QUEUE_CONNECTION=redis

# ----------------------
# Broadcasting
# ----------------------
BROADCAST_DRIVER=log

# ----------------------
# Mail Configuration
# ----------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-mail-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@animefeverzone.com
MAIL_FROM_NAME="${APP_NAME}"

# ----------------------
# Logging
# ----------------------
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# ----------------------
# Filesystem
# ----------------------
FILESYSTEM_DISK=local

# ----------------------
# Security & Performance
# ----------------------
OCTANE_SERVER=swoole
OCTANE_HTTPS=true

